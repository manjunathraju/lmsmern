<div class="container" style="background-color: white;">
    <div class="row">
        <div class="col-sm-12" style="background-color: grey;color: white;padding-top: 30px;">
            <h3>Add Customers</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
          <!-- onsubmit="addcustomers(event,this)" -->
            <form action="/customerdata" method="POST"  style="padding-top:10px;" enctype="multipart/form-data">

              <label for="customertype">Customer Type</label>
              <select id="customertype" name="customertype">
                <option value="exist">Existing Customer</option>
                <option value="new">New Customer</option>
              </select>

              <label for="gender">Gender</label><br>
              <select id="gender" name="gender">
                <option value="mr">Mr.</option>
                <option value="ms">Ms.</option>
              </select>

                <label for="customername">Customer Name</label>
                <input type="text" id="customername" name="customername" placeholder="customer name " required>
            
                <label for="customeremail">Customer Email</label>
                <input type="text" id="customeremail" name="customeremail" placeholder="customer email" required>

                <label for="password">New Password*</label><br>
                <input type="password" id="password" name="password"  required><br>

                <label for="cpassword">Confirm Password*</label><br>
                <input type="password" id="cpassword" name="cpassword"  required><br>
            

                <label for="accounttype">Account Type</label>
                <select id="accounttype" name="accounttype">
                  <option value="online">Online Training</option>
                  <option value="classroom">Classroom Training</option>
                  <option value="lvclassroom">Live Virtual Classroom Training</option>
                </select><br>

                <label for="mobile">Mobile</label><br>
                <input type="number" id="mobile" name="mobile"  required><br>

                <label for="country">Country</label><br>
                <input type="text" id="country" name="country"  required><br>

                <label for="state">State</label>
                <input type="text" id="state" name="state"  required>

                <label for="accesstype">Choose Version</label>
                <select id="accesstype" name="accesstype">
                  <option value="trial">Trial</option>
                  <option value="paid">Paid</option>
                </select>

                <label for="examaccess">Allow Exam</label>
                <select id="examaccess" name="examaccess">
                  <option value="yes">YES</option>
                  <option value="no">NO</option>
                </select>
                <label for="startedate">SignedUp date</label><br>
                <input type="date" id="startedate" name="startedate"><br>

                <label for="expdate">Expiry date</label><br>
                <input type="date" id="expdate" name="expdate"><br>
                    <br>
                <label for="category">Choose Category</label>
                <select id="category" name="category" multiple>
                  <option value="all">All</option>
                  <option value="agile management">Agile management</option>
                  <option value=" pmp">PMP</option>
                </select>

                <label for="status">Status</label>
                <select id="status" name="status">
                  <option value="enable">Enable</option>
                  <option value="disable">Disable</option>
                </select>

                <label for="profilepic">Profile Picture</label><br>
                <input type="file" id="file" name="file" required>


                <input type="submit" value="Save">
                <input type="button" id="cancel" onclick="location.href='/customers'" value="Cancel">
              </form>


        </div>
        
    </div>

</div>
<script>
  var password=document.getElementById('password');
  var cpassword=document.getElementById('cpassword');
  


function validatePassword(){
  if(password.value != cpassword.value) {
    cpassword.setCustomValidity("Passwords Don't Match");
  } else {
    cpassword.setCustomValidity("");
  }
}

password.onchange = validatePassword;
cpassword.onkeyup = validatePassword;
     
