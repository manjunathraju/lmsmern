<div class="container" style="background-color: white;">
    <div class="row">
        <div class="col-sm-12" style="background-color: grey;color: white;padding-top: 30px;">
            <h3>Add Categories</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
         
            <form action="/categoriesdata" method="POST"  style="padding-top:10px;" enctype="multipart/form-data">

             

                <label for="categoryname">Category Name</label>
                <input type="text" id="categoryname" name="categoryname" placeholder="Category name " required>
            
                <label for="categorycode">Category Code</label>
                <input type="text" id="categorycode" name="categorycode" placeholder="Category code" required>

                <label for="categorytext">Category Text</label><br>
                
                <textarea id="categorytext" name="categorytext" rows="4" cols="30" placeholder="Category Data"></textarea>
<br>
                <label for="status">Status</label>
                <select id="status" name="status">
                  <option value="ENABLE">Enable</option>
                  <option value="DISABLE">Disable</option>
                </select>

                <label for="categoryimage">Category Image</label><br>
                <input type="file" id="file" name="file" required>
                <!-- <input type="file" id="file" name="file" required> -->


                <input type="submit" value="Save">
                <input type="button" id="cancel" onclick="location.href='/categories'" value="Cancel">
              </form>


        </div>
        
    </div>

</div>


