    <h2> New Review   </h2>
    <form action="/revieweditreviews/<%=hdata._id%>" method="POST"  style="padding-top:10px;" enctype="multipart/form-data">
    
          <div class="container-fluid" style="padding-bottom: 150px;" > 
            <div class="row" >


                <label for="fname" >Reviewer Name</label>
                <input type="text" id="reviewername" name="reviewername" value="<%=hdata.reviewername%>" placeholder="">
               
                
                <div class="col-sm-12" >Review Comments 
                  <div id="editor1"> </div>
                  <input type="hidden" name="rcomment" id="rcomment" value="<%=hdata.rcomment%>">
                </div>

               

            </div>
          </div>

            <div class="container-fluid" > 
                <div class="row" style="margin-bottom: 50px;">
    
                <label for="fname" >Reviewer Job Desc </label>
                <input type="text" id="reviewerjobdesc" name="reviewerjobdesc"  value="<%=hdata.reviewerjobdesc%>" placeholder="">

                <label for="birthdaytime">Review Date:</label>
                <input type="date" id="reviewdate" name="reviewdate"  value="<%=hdata.reviewdate%>"> 

                <label for="fname" >Reviewer Ratings</label>
                <input type="text" id="reviewerrating" name="reviewerrating" value="<%=hdata.reviewerrating%>" placeholder="">


                <!-- <label for="fname" >Reviewer LinkedIn URL</label>
                <input type="text" id="reviewerlinkedinurl" name="reviewerlinkedinurl" value="<%=hdata.reviewerlinkedinurl%>" placeholder=""> -->

                <div class="mb-3">
                    <label for="formFile" class="form-label">Reviewer Image </label>
                    <input class="form-control" id="reviewerimage" type="file" name="editedreviewimg" >
                    <label for="imagename" ><%=hdata.reviewerimage%> </label>
                  </div>

                  <label for="Status">Status</label>
                    
                    <select name="status" id="Status" style="width: 100%; height: 5vh;">
                    <option value="enable">Enable</option>
                    <option value="disable">Disable </option>
                </select>  
            </div>
        </div>
                    
            <input type="submit" value="SUBMIT" class="btn">
           
            <input type="button"  onclick="location.href='/reviews'" value="Cancel" class="btncancel">

        </form>
               
    

    <script>
   
   
        var toolbarOptions = [
        ['bold', 'italic', 'underline', 'strike'],        // toggled buttons
        ['blockquote', 'code-block'],
        [{ 'header': 1 }, { 'header': 2 }],               // custom button values
        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
        [{ 'script': 'sub'}, { 'script': 'super' }],      // superscript/subscript
        [{ 'indent': '-1'}, { 'indent': '+1' }],          // outdent/indent
        [{ 'direction': 'rtl' }],                         // text direction
        [{ 'size': ['small', false, 'large', 'huge'] }],  // custom dropdown
        [{ 'header': [1, 2, 3, 4, 5, 6, false] }],

        [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
        [{ 'font': [] }],
        [{ 'align': [] }],

        ['clean']                                         // remove formatting button
        ];

       
        var quill1 = new Quill('#editor1', {
        modules: {
        toolbar: toolbarOptions
        },
        theme: 'snow'
        })

        var form= document.querySelector("form");
        var input1 = document.getElementById('rcomment');
        form.addEventListener('submit', function(e){
        input1.value = quill1.root.innerText;
    });


       
    </script>
   
        
