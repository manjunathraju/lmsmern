    <body>
      
    <h2> New Blog   </h2>
    <form action="/blogdata" method="POST"  style="padding-top:10px;" enctype="multipart/form-data" >
    
        <div class="container-fluid" style="background-color: rgba(101, 114, 78, 0.534);" > 
            <div class="row" style="margin-bottom: 40px;">

              <h1 id="data" style="display: none;"><%=data%></h1>

                <label for="fname" >Blog Title </label>
                <input type="text" id="blogtitle" name="blogtitle" placeholder="" >

                <label for="fname" >Blog URL </label>
                <input type="text" id="blogurl" name="blogurl" placeholder="" >

                  <div class="mb-3">
                    <label for="formFile" class="form-label">Blog Banner Image </label>
                    <input class="form-control" id="blogbannerimage" type="file" name="bannerimg" 
                    accept="image/png, image/gif, image/jpeg , image/jpg,image/PNG, image/GIF, image/JPEG , image/JPG, image/webp , image/WEBP">
                  </div>

                  <div class="row" style="margin-bottom: 150px; padding-top: 20px;">
                    <label  > Blog Introduction </label>
                    <div class="col-sm-12">
                      <div id="editor5"> </div>
                      <input type="hidden" name="blogintroduction" id="blogintroduction" >
                    </div>
                  </div>


                  <div class="mb-3">
                    <label for="formFile" class="form-label" style="padding-top: 20px;">Intro Image </label>
                    <input class="form-control" id="introimage" type="file" name="introductionimg" 
                    accept="image/png, image/gif, image/jpeg , image/jpg,image/PNG, image/GIF, image/JPEG , image/JPG, image/webp , image/WEBP">
                  </div>


                    <div class="row" style="margin-bottom: 150px; padding-top: 20px;">
                      <label for="fname" >Main Description </label>
                      <div class="col-sm-12">
                        <div id="editor1"> </div>
                        <input type="hidden" name="maindescription" id="maindescription" >
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="formFile" class="form-label" >Maindesc Image </label>
                      <input class="form-control" id="maindescimage" type="file" name="maindescimg" 
                      accept="image/png, image/gif, image/jpeg , image/jpg,image/PNG, image/GIF, image/JPEG , image/JPG, image/webp , image/WEBP">
                    </div>


                    <div class="row" style="margin-bottom: 150px; padding-top: 20px;">
                      <div class="col-sm-12">Conclusion
                        <div id="editor4"> </div>
                        <input type="hidden" name="conclusion" id="conclusion" >
                      </div>
                    </div>


                <label for="fname"  style="padding-top: 20px;">Category Name  </label>
                <select name="categoryname" id="categoryname" style="width: 100%;">

                </select>
                <!-- <input type="text" id="categoryname" name="categoryname"  placeholder=""> -->

                <!-- <label for="birthdaytime"  >Created At  </label>
                <input type="datetime-local" id="createdat" name="createdat"> -->

                  <label for="Status" style="padding-top: 20px;">Status</label>
                    
                    <select name="Status" id="Status"  style="width: 100%;
                    height: 5vh;">
                    <option value="enable">Enable</option>
                    <option value="disable">Disable </option>
                </select>  
            </div>
        </div>


        <div class="container-fluid" style="background-color: rgba(101, 114, 78, 0.534);" > 
            <div class="row" style="margin-bottom: 30px;">

                <label for="fname" >Meta Title   </label>
                <input type="text" id="metatitle" name="metatitle"   placeholder="">

                <label for="fname" >Meta Description   </label>
                <input type="text" id="metadescription" name="metadescription"  placeholder="">
            </div>
        </div>

              <div class="container-fluid" style="background-color: rgba(101, 114, 78, 0.534);" > 
                <div class="row" style="margin-bottom: 110px;">


                  <div class="row" style="margin-bottom: 10px;">
                    <div class="col-sm-6">Author Name 
                        <input type="text" name="authorname" id="authorname" >
                    </div>

                    <div class="col-sm-6">Author Description 
                        <input type="text" name="authordescription" id="authordescription" >
                    </div>
                  </div>

                
    
                  <div class="mb-3">
                    <label for="formFile" class="form-label">Author Image </label>
                    <input class="form-control" id="authorimage" type="file" name="authorimg" 
                    accept="image/png, image/gif, image/jpeg , image/jpg,image/PNG, image/GIF, image/JPEG , image/JPG, image/webp , image/WEBP">
                  </div>

                  <label for="fname"> Disclaimer </label>
                  <textarea id="disclaimer" name="disclaimer"  rows="4" cols="50">
                  </textarea>

                </div>
              </div>

            <input type="submit" value="SUBMIT" class="btn">
            
            <input type="button" onclick="location.href='/blog'" value="Cancel" class="btncancel">

        </form>
               
    </body>

    <script>
      
      var data=document.getElementById("data").innerText;
        var array=data.split(',');
        for(var i=0;i<array.length;i++){
